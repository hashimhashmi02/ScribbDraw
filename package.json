 {
    "name": "excalidraw",
    "private": true,
    "workspaces": [
       "apps/*",
       "packages/*"
    ],
    "scripts": {
      "build": "turbo run build",
      "dev":   "turbo run dev",
      "lint":  "turbo run lint",
      "format": "prettier --write \"**/*.{ts,tsx,md}\"",
      "check-types": "turbo run check-types"
    },
    "devDependencies": {
      "prettier": "^3.6.0",
      "turbo":    "^2.5.4",
      "typescript": "5.8.2"
    },
 
 "packageManager": "pnpm@9.5.0",
 "engines": {
   "node": "18.18.2"
 },
    "dependencies": {
      "@prisma/client": "6.11.1",
      "prisma":        "^6.11.1"
    }
 }
